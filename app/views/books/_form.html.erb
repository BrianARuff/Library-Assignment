<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :book_title, id: :book_book_title, class: 'form-control', placeholder:'Title' %>
  </div>

  <div class="form-group">
    <%= form.text_field :author, id: :book_author, class: 'form-control', placeholder:'Author' %>
  </div>

  <div class="form-group">
    <%= form.text_field :genre, id: :book_genre, class: 'form-control', placeholder: 'Genre' %>
  </div>

  <div class="form-group">
    <%= form.number_field :reading_level, id: :book_reading_level, class: 'form-control', placeholder: 'Reading Level (1-10)' %>
  </div>

  <div class="form-group">
    <%= form.number_field :number_of_pages, id: :book_number_of_pages, placeholder: 'Number of Pages', class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Submit', class: 'btn btn-primary', style: 'margin-bottom: 25px; margin-top: 25px;' %>
  </div>
<% end %>
